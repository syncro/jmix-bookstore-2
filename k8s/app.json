{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "jmix-bookstore-app"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "jmix-bookstore-app"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "jmix-bookstore-app"
        }
      },
      "spec": {
	"imagePullSecrets": [
	  {"name": "registrysecret"}
	],
        "containers": [
          {
            "image": "ghcr.io/syncro/jmix-bookstore-2:latest",
            "imagePullPolicy": "Always",
            "name": "jmix-bookstore-app",
            "env": [
              {
                "name": "DB_NAME",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "jmix-bookstore-db-config",
                    "key": "db_name"
                  }
                }
              },
              {
                "name": "DB_USER",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "jmix-bookstore-db-config",
                    "key": "db_user"
                  }
                }
              },
              {
                "name": "DB_PASSWORD",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "jmix-bookstore-db-config",
                    "key": "db_password"
                  }
                }
              },
              {
                "name": "DB_HOST",
                "value": "jmix-bookstore-db-service"
              },
              {
                "name": "DB_PORT",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "jmix-bookstore-db-config",
                    "key": "db_port"
                  }
                }
              },
              {
                "name": "SPRING_PROFILES_ACTIVE",
                "value": "prod"
              }
            ],
            "lifecycle": {
              "preStop": {
                "exec": {
                  "command": ["sh", "-c", "sleep 10"]
                }
              }
            },
            "ports": [
              {
                "containerPort": 8080
              },
              {
                "containerPort": 5701
              }
            ]
          }
        ]
      }
    }
  }
}
